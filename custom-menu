#!/bin/bash

cwd=$(pwd)

eclipse(){
   cd ./custom/eclipse
   ./eclipse.sh
   read -rsp $'Press enter to continue...\n'
}

readMe(){
   clear
   cat ./custom/README.md
   echo "" && echo "" && echo ""
   read -rsp $'Press enter to continue...\n'
}


while :
do
    cd $cwd
    clear
    cat<<EOF
  ___                                        __ _ __     _           __    _  _          
   | |_  _    | | | _|_ o __  _ _|_ _    | |(_ / \ _)   | \ _       (_    |_)|_) _  ___|_
   | | |(/_   |_| |  |_ | |||(_| |_(/_   |^|__)\_//__   |_/(/_\_/   __)|_||  |  (_) |  |_

 ██████╗██╗   ██╗███████╗████████╗ ██████╗ ███╗   ███╗    ███╗   ███╗███████╗███╗   ██╗██╗   ██╗
██╔════╝██║   ██║██╔════╝╚══██╔══╝██╔═══██╗████╗ ████║    ████╗ ████║██╔════╝████╗  ██║██║   ██║
██║     ██║   ██║███████╗   ██║   ██║   ██║██╔████╔██║    ██╔████╔██║█████╗  ██╔██╗ ██║██║   ██║
██║     ██║   ██║╚════██║   ██║   ██║   ██║██║╚██╔╝██║    ██║╚██╔╝██║██╔══╝  ██║╚██╗██║██║   ██║
╚██████╗╚██████╔╝███████║   ██║   ╚██████╔╝██║ ╚═╝ ██║    ██║ ╚═╝ ██║███████╗██║ ╚████║╚██████╔╝
 ╚═════╝ ╚═════╝ ╚══════╝   ╚═╝    ╚═════╝ ╚═╝     ╚═╝    ╚═╝     ╚═╝╚══════╝╚═╝  ╚═══╝ ╚═════╝ 
 ===============================================================================================================================================

                            +------------------------------+
                            |                    (R)Return |
                            +------------------------------+
                            | Please enter your choice:    |
                            |                              |
                            |                              |
                            | (E)clipse Developer Studio   |
                            | Read (M)e                    |
                            |                              |
                            +------------------------------+
EOF
    read -n1 -s
    case "$REPLY" in
    "e" | "E") eclipse             ;;
    "m" | "M") readMe              ;;
    "r" | "R")  exit               ;;
     * )  echo "invalid option"    ;;
    esac
    sleep 1
done

